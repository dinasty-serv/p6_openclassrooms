{% extends 'base.html.twig' %}

{% block body %}
    {% include 'module/slider.html.twig' %}
    <div class="container">
        <hr>
        <!-- Portfolio Section -->
        <h2>Derniers Tricks</h2>

        <div class="row">
            {% for trick in tricks %}
            <div class="col-lg-3 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="{{ path('app_trick_view', {'slug':trick.slug}) }}"><img class="card-img-top" style="width: 255px; height: 155px;" src="{{ asset(trick.imgDefault.path) }}" alt=""></a>
                    <div class="card-body">

                        <h5 class="card-title">
                            <a href="{{ path('app_trick_view', {'slug':trick.slug}) }}">{{ trick.name }}</a>
                            <a href="{{ path('app_trick_delete', {'id':trick.id}) }}" class="btn btn-sm  float-right"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            <a href="{{ path('app_trick_edit', {'id':trick.id}) }}" class="btn btn-sm  float-right"><i class="fa fa-edit" aria-hidden="true"></i></a>

                        </h5>
                    </div>
                </div>
            </div>
            {% endfor %}


        </div>
    </div>
{% endblock body %}
